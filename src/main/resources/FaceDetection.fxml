<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="220.0" prefWidth="310.0" xmlns="http://javafx.com/javafx/8.0.71" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FaceDetectionController">
    <top>
        <VBox>
            <HBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets bottom="10" top="10" />
                </padding>
            </HBox>
            <Separator />
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="122.0" prefWidth="253.0">
            <padding>
                <Insets left="10" right="10" />
            </padding>
            <ImageView fx:id="originalFrame" />
        </VBox>
    </center>
    <right>
        <VBox alignment="BASELINE_RIGHT" prefHeight="122.0" prefWidth="85.0">
            <padding>
                <Insets left="10" right="10" />
            </padding>
            <Button fx:id="calibrate" alignment="BASELINE_RIGHT" onAction="#calibrate" text="Calibrate" />
        </VBox>
    </right>
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>
            <Button fx:id="cameraButton" alignment="center" onAction="#startCamera" text="Start camera" />
        </HBox>
    </bottom>
</BorderPane>
